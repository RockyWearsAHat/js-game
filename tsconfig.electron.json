{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/electron",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es2020"]
  },
  "include": ["electron.ts"],
  "exclude": ["node_modules"]
}
