{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src/server/**/*.ts",
    "src/core/**/*.ts",
    "src/physics/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
